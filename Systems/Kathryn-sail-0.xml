-->

  <function name="aero/moment/yaw_sail-0-lbsft">
    <description>Yaw moment due to sail 0. Since sail is in front of COG, moment should always face the boat away from the wind.</description>
    <product>
     <property>aero/qbar-psf</property> <!--wind pressure -->
     <property>/surface-positions/sails/sail[0]/sail-sqft</property> <!-- square footage of sail -->
     <property>/surface-positions/sails/sail[0]/sail-reef-norm</property> <!-- percentage of square footage exposed to wind -->
     <property>/surface-positions/sails/sail[0]/sail-cof-x</property> <!-- distance from COG -->
     <property>/surface-positions/sails/sail[0]/sail-set-norm</property> <!-- to port or stbd? -->
     <table> <!-- angle of sail to wind -->
      <independentVar lookup="row">/surface-positions/sails/sail[0]/sail-beta-deg</independentVar>
      <tableData>
        0   0.00
       32   0.00
       39   1.00
       45   1.50
       90   2.50
       135  1.50
       180  0.00
     </tableData>
    </table>
    </product>
  </function>


<!-- HEEL -->
  <function name="aero/moment/heel_sail-0-lbsft">
    <description>Heel moment due to sail 0.</description>
    <product>
     <property>aero/qbar-psf</property> <!--wind pressure -->
     <property>/surface-positions/sails/sail[0]/sail-sqft</property> <!-- square footage of sail -->
     <property>/surface-positions/sails/sail[0]/sail-reef-norm</property> <!-- percentage of square footage exposed to wind -->
     <property>/surface-positions/sails/sail[0]/sail-cof-z</property> <!-- distance from COG -->
     <property>/surface-positions/sails/sail[1]/sail-set-norm</property> <!-- -1 for port, 1 for stbd -->
     <table> <!-- angle of sail to wind -->
      <independentVar lookup="row">/surface-positions/sails/sail[0]/sail-beta-deg</independentVar>
      <tableData>
        0   0.0
        45 -0.5
        90 -1.0
       135 -0.5
       180  0.0
       225  0.5
       270  1.0
       315  0.5
       360  0.0
     </tableData>
    </table>
    </product>
  </function>

